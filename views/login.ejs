<% include layout/header.ejs  %>
    <div class="container">
        <section class="supportFormThin">
            <% include layout/messages.ejs  %>
            <h1 class="highlight">Login</h1>
            <form action="/login/auth" name="form" method="post">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            <label for="inputUsername">Email</label>
                            <input type="text" class="form-control" id="inputUsername" name="username" value="" required  placeholder="e.g. your@mail.com">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Password</label>
                            <input type="password" class="form-control" id="inputPassword" name="password" placeholder="********">
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-lg btn-primary pull-right">Login</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
<% include layout/footer.ejs  %>